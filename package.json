{
  "name": "WARCreate",
  "description": "Create WARC files from any webpage",
  "author": {
    "email": "warcreate@matkelly.com",
    "name": "Mat Kelly",
    "url": "https://matkelly.com"
  },
  "keywords": [
    "archive",
    "web archive",
    "warc",
    "chrome",
    "browser",
    "extension"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/machawk1/warcreate.git"
  },
  "scripts": {
    "test": "standard",
    "lint": "standard --verbose | snazzy",
    "linting-errors-fix": "standard --fix"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "devDependencies": {
    "snazzy": "^7.0.0",
    "standard": "^16.0"
  },
  "standard": {
    "ignore": [
      "js/base64.js",
      "js/date.js",
      "js/FileSaver.js",
      "js/jquery.rc4.js",
      "js/xml2json.js",
      "js/punycode.js"
    ],
    "globals": [
      "chrome",
      "localStorage",
      "alert",
      "Image",
      "Blob",
      "XMLHttpRequest",
      "navigator",
      "params",
      "requestHeaders",
      "responseHeaders",
      "saveAs",
      "$",
      "jQuery",
      "xml2json",
      "moment",
      "getallBgimages"
    ]
  }
}
